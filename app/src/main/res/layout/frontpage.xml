<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".FrontPage"
    android:id="@+id/swipe_main">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="horizontal">

    <Button
        android:id="@+id/text_to_speech_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="Optical Character Recognition"
        android:textSize="22dp"
        tools:ignore="MissingConstraints"
        />

    <Button
        android:id="@+id/currency_detection_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="Currency Detection"
        android:textSize="22dp"
        tools:ignore="MissingConstraints" />
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    <Button
        android:id="@+id/object_detection_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="Object Detection"
        android:textSize="22dp"

        tools:ignore="MissingConstraints"
        />

    <Button
        android:id="@+id/misc_button"
        android:text="Introduction Button"
        android:textSize="20dp"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="365dp" />
    </LinearLayout>
</LinearLayout>
